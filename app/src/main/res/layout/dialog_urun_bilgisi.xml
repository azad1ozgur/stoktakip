<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_urun_adi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"

        android:text="@string/urunadi"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"

        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_urun_adi"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/img_barkod"
            android:layout_width="22dp"
            android:layout_height="match_parent"

            android:layout_marginTop="1dp"
            android:layout_weight="1"

            app:srcCompat="@drawable/brwhitered" />

        <TextView
            android:id="@+id/txt_barkod_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/ornekbarkod"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"

        android:layout_marginRight="23dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/txt_urun_adi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_urun_adi">

        <TextView
            android:id="@+id/txt_urun_adeti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="end"

            android:text="@string/ornekstokadet"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text=" adet" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"

        android:layout_marginRight="23dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/txt_alis_fiyati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.25"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ₺ / "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_satis_fiyati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.75"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ₺" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_iptal"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/iptal"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btn_guncelle"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/stokguncelle"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:backgroundTint="@color/guncelleButon" />

        <Button
            android:id="@+id/btn_sil"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/stoksil"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:backgroundTint="@color/silButon" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>