<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_islem_turu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/urun_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"

            android:text="@string/urunadi"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_barkod"
                android:layout_width="22dp"
                android:layout_height="match_parent"

                android:layout_marginTop="1dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/brwhitered" />

            <TextView
                android:id="@+id/barkod_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/ornekbarkod"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"

            android:singleLine="true"
            android:text="2019-05-18 19:38:25"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="10dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/urun_adeti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="end"

            android:text="@string/ornekstokadet"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_urun_fiyati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="end"

            android:text="1.25"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_kullanici"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kullanici"
            android:gravity="end"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>